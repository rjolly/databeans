grant codebase "file:databeans.jar" {
	permission java.io.FilePermission "-", "read,write";
	permission java.net.SocketPermission "localhost:1024-", "accept,connect";
	permission java.lang.RuntimePermission "shutdownHooks";
	permission java.lang.RuntimePermission "accessDeclaredMembers";
	permission java.lang.RuntimePermission "accessClassInPackage.sun.reflect.misc";
	permission javax.security.auth.AuthPermission "createLoginContext.Databeans";
	permission javax.security.auth.AuthPermission "modifyPrincipals";
	permission javax.security.auth.AuthPermission "doAsPrivileged";
	permission java.util.PropertyPermission "*", "read";
};

grant codebase "file:-" {
	permission java.util.PropertyPermission "*", "read";
	permission java.net.SocketPermission "localhost:1024-", "accept,connect";
	permission java.awt.AWTPermission "accessClipboard";
};

grant Principal persistence.server.DatabeansPrincipal "admin" {
	permission persistence.AdminPermission "*";
	permission persistence.MethodPermission "*";
	permission persistence.PropertyPermission "*";
};

grant {
	permission persistence.MethodPermission "persistence.*";
	permission persistence.PropertyPermission "persistence.util.SubList.*";
	permission persistence.PropertyPermission "persistence.util.RandomAccessSublist.*";
	permission persistence.PropertyPermission "persistence.util.SubMap.*";
	permission persistence.PropertyPermission "persistence.util.EntrySetView.*";
};
